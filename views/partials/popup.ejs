  <span class="close" id="close_login">&times;</span>

  <div id="content" class="popup_content">
    <div class="header">
      <h4 class="header">Log ind</h4>
    </div>

    <form class="form">
      <div class="email">
        <label for="email_log" class="label">Indtast din email:</label>
        <input
          type="email"
          placeholder="Email"
          name="email"
          class="textbox"
          required
          autocomplete="off"
          id="email_log"
        />
      </div>
      <div class="kode">
        <label for="pss_login" class="label">Indtast din adgangskode:</label>
        <input
          type="password"
          name="pss_login"
          id="pss_login"
          placeholder="Adgangskode"
          class="textbox"
          required
          autocomplete="off"
        />
      </div>
      <div class="submit">
        <input type="submit" value="Log ind" id="submit" autocomplete="off" />
      </div>
    </form>
  </div>
</dialog>
