<dialog id="opret_popup" class="popup">
  <span class="close" id="close_opret">&times;</span>

  <div id="content" class="popup_content">
    <div class="header">
      <h4 class="header">Tilmeld dig nu</h4>
    </div>

    <form class="form">
      <div class="email">
        <label for="email_op" class="opret label">Indtast din email:</label>
        <input
          type="email"
          placeholder="Email"
          name="email"
          class="opret textbox"
          required
          autocomplete="off"
          id="email_op"
        />
      </div>
      <div class="kode">
        <label for="pss_opret" class="opret label"
          >Indtast en adgangskode:</label
        >
        <input
          type="password"
          name="pss_opret"
          id="pss_opret"
          placeholder="Adgangskode"
          class="opret textbox"
          required
          autocomplete="off"
        />
      </div>
      <div class="submit">
        <input
          type="submit"
          value="Opret bruger"
          id="submit"
          autocomplete="off"
        />
      </div>
    </form>
  </div>
</dialog>

